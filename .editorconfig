root = true

[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space

[*.{html,php,py}]
indent_size=4

[*.js]
indent_size=2

[*.go]
indent_size=4
indent_style=tab

# Text files that are downloaded should be perserved.
[*.txt]
indent_style=unset
indent_size=unset
trim_trailing_whitespace=false
insert_final_newline=false
